<% if !@scientist.errors.empty? %>
    <ul>
        <% @scientist.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <%= f.submit %>
<% end %>