<h1>Retailer Detail View</h1>


<h2>Name: <%= @retailer.name %></h2>
<h3>Year Established: <%= @retailer.year_established %></h3>


<% if @retailer.snacks.empty? %>

    <div>This Retailer has no snacks yet</div>

<% else %>

    <h4>Snacks by this retailer: </h4>
        <ul>
            <% @retailer.snacks.each do |snack| %>
                <li><%= link_to snack.name, snack_path(snack) %></li>
            <% end %>
        </ul>
        
<% end %>