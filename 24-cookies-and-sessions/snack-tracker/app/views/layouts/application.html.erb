<!DOCTYPE html>
<html>
  <head>
    <title>SnackTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "sessions" && action_name == "show_login_form" %>
      <% if session[:logged_in_user_id] %>
        <div>Welcome <%= current_user.username %></div>
        <div><%= link_to "Logout", logout_path, method: "DELETE" %>
      <% else %>
        <div><%= link_to "Log in", login_path %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
